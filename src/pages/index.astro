  {
    posts.map((post) => (
      <>
        <HorizontalCard
          title={post.title}
          img={post.coverImage.url}
          desc={post.subtitle}
          url={"/blog/" + createSlug(post.title, post.slug)}
          target="_self"
          badge={post.badge}
          publishedAt={post.publishedAt}
        />
        <div class="divider my-0" />
      </>
    ))
  }
